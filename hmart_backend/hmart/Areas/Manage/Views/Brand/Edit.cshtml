@model Brand
@{
    ViewData["Title"] = "Edit";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-action">
                        Edit Brand
                    </div>
                    <div class="card-content">
                        <form class="col s12" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-sm-12">
                                    <div class="row m-0">
                                        <div class="input-field col s4">
                                            <input asp-for="Name" class="validate @(Model?.Name!=null?"valid":"")">
                                            <label asp-for="Name" class="@(Model?.Name!=null?"active":"")">Name</label>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="input-field col s4">
                                            <input asp-for="Order" class="validate @(Model?.Order!=null?"valid":"")">
                                            <label asp-for="Order" class="@(Model?.Order!=null?"active":"")">Order</label>
                                            <span class="text-danger" asp-validation-for="Order"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="waves-effect waves-light btn btn-success" style="width:200px">Edit</button>
                            <a asp-action="index" class="waves-effect waves-light btn btn-danger ml-2" style="width:200px">Cancel</a>
                        </form>
                        <div class="clearBoth"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).on("click", "span#deleteImage", function (e) {
            console.log($("form.user .image-poster"));

            $(this).parent().parent().remove();
        });
    </script>
}