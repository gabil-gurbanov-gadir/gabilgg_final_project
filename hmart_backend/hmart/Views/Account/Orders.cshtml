@model List<Order>
@{
    ViewData["Title"] = "Orders";
    Setting setting = ViewBag.Setting;
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image=../uploads/setting/@setting.MainBgImgSrc>
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Account</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active">Account</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Account start -->
    <section id="account" class="py-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <div class="tab-buttons">
                        <ul class="tab-list">
                            <li>
                                <a asp-action="detail" class="nav-link">
                                    Account
                                    details
                                </a>
                            </li>
                            <li><a asp-action="address" class="nav-link">Addresses</a></li>
                            <li> <a asp-action="orders" class="nav-link active">Orders</a></li>
                            <li><a asp-action="logout" class="nav-link">logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    @{
                                        int order = 1;
                                    }
                                    <tbody>
                                        @if (Model.Count() > 0)
                                        {
                                            @foreach (Order item in Model)
                                            {
                                                <tr>
                                                    <td>@order</td>
                                                    <td>@item.CreatedAt.ToString("MMM dd, yyyy") May 10, 2018</td>
                                                    @if (item.Status == null)
                                                    {
                                                        <td><span class="orange-text">Processing</span></td>
                                                    }
                                                    else if (item.Status == true)
                                                    {
                                                        <td><span class="green-text">Completed</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="red-text">Rejected</span></td>
                                                    }

                                                    <td>$@item.TotalPrice for @item.OrderItems.Count() item </td>
                                                    <td><a asp-action="orderdetail" asp-route-id="@item.Id" class="view">view</a></td>
                                                </tr>
                                            }
                                        }
                                        <tr>
                                            <td>2</td>
                                            <td>May 10, 2018</td>
                                            <td>Processing</td>
                                            <td>$17.00 for 1 item </td>
                                            <td><a asp-action="cart" class="view">view</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Account end -->
</main>
<!-- Main End -->
