@model Order
@{
    ViewData["Title"] = "OrderDetail";
    Setting setting = ViewBag.Setting;
    int countSum = 0;
    double priceSum = 0;
    double totalPrice = 0;
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../uploads/setting/@setting.MainBgImgSrc">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Order</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Order</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Product detail start -->
    <section id="wishlist-items" class="py-section">
        <div class="container">
            <h3 class="page-title">Your Order items</h3>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="product-table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    <th>Count</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td class="product-image">
                                                <a href="#">
                                                    <img class="ms-2" src="~/uploads/products/@item.Image"
                                                         alt="product">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="#">@item.Name</a>
                                            </td>
                                            <td class="product-price"><span class="amount">$@item.Price.ToString("#.00")</span></td>
                                            <td class="product-count">
                                                @item.Count
                                            </td>
                                            @(totalPrice=item.Count*item.Price)
                                            <td class="product-total-price">
                                                @totalPrice.ToString("#.00")
                                            </td>
                                        </tr>
                                        countSum += item.Count;
                                        priceSum += item.Count * item.Price;
                                    }
                                    }
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/1.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name">
                                        <a href="#">Modern Smart Phone</a>
                                    </td>
                                    <td class="product-price"><span class="amount">$60.00</span></td>
                                    <td class="product-count">
                                        3
                                    </td>
                                    <td class="product-total-price">
                                        $180.00
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/2.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Bluetooth Headphone</a></td>
                                    <td class="product-price"><span class="amount">$50.00</span></td>
                                    <td class="product-count">
                                        2
                                    </td>
                                    <td class="product-total-price">
                                        $100.00
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/3.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Smart Music Box</a></td>
                                    <td class="product-price"><span class="amount">$70.00</span></td>
                                    <td class="product-count">
                                        2
                                    </td>
                                    <td class="product-total-price">
                                        $140.00
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Grand Total: </th>
                                    <th>Total products</th>
                                    <th>@countSum</th>
                                    <th>Sum Total</th>
                                    <th>$@priceSum.ToString("#.00")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            </div>
    </section>
    <!-- Product detail end -->
</main>
<!-- Main End -->
