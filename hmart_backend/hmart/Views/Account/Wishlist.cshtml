
@{
    ViewData["Title"] = "Wishlist";
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../assets/uploads/commons/main-header-bg.png">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Wishlist</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Wishlist</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Product detail start -->
    <section id="wishlist-items" class="py-section">
        <div class="container">
            <h3 class="page-title">Your wishlist items</h3>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="product-table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    <th>Add To Cart</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/1.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name">
                                        <a href="#">Modern Smart Phone</a>
                                    </td>
                                    <td class="product-price"><span class="amount">$60.00</span></td>
                                    <td class="product-to-cart">
                                        <a href="#">add to cart</a>
                                    </td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/2.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Bluetooth Headphone</a></td>
                                    <td class="product-price"><span class="amount">$50.00</span></td>
                                    <td class="product-to-cart">
                                        <a href="#">add to cart</a>
                                    </td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/3.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Smart Music Box</a></td>
                                    <td class="product-price"><span class="amount">$70.00</span></td>
                                    <td class="product-to-cart">
                                        <a href="#">add to cart</a>
                                    </td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product detail end -->
</main>
<!-- Main End -->
