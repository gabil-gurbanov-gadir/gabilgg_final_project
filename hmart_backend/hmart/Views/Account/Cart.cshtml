
@{
    ViewData["Title"] = "Cart";
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../assets/uploads/commons/main-header-bg.png">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Cart</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Cart items start -->
    <section id="cart-items" class="py-section">
        <div class="container">
            <h3 class="page-title">Your wishlist items</h3>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="product-table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/1.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name">
                                        <a href="#">Modern Smart Phone</a>
                                    </td>
                                    <td class="product-price"><span class="amount">$60.00</span></td>
                                    <td class="product-quantity">
                                        <div class="plus-minus">
                                            <button class="minus operator">-</button>
                                            <input type="text" class="count" value="1">
                                            <button class="plus operator">+</button>
                                        </div>
                                    </td>
                                    <td class="product-subtotal">$70.00</td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/2.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Bluetooth Headphone</a></td>
                                    <td class="product-price"><span class="amount">$50.00</span></td>
                                    <td class="product-quantity">
                                        <div class="plus-minus">
                                            <button class="minus operator">-</button>
                                            <input type="text" class="count" value="1">
                                            <button class="plus operator">+</button>
                                        </div>
                                    </td>
                                    <td class="product-subtotal">$80.00</td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="product-image">
                                        <a href="#">
                                            <img class="ms-2" src="~/assets/uploads/products/3.png"
                                                 alt="product">
                                        </a>
                                    </td>
                                    <td class="product-name"><a href="#">Smart Music Box</a></td>
                                    <td class="product-price"><span class="amount">$70.00</span></td>
                                    <td class="product-quantity">
                                        <div class="plus-minus">
                                            <button class="minus operator">-</button>
                                            <input type="text" class="count" value="1">
                                            <button class="plus operator">+</button>
                                        </div>
                                    </td>
                                    <td class="product-subtotal">$90.00</td>
                                    <td class="product-remove">
                                        <a href="#"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="shopping-btn-wrapper">
                        <div class="continue-shopping">
                            <a asp-controller="shop" asp-action="index">Continue Shopping</a>
                        </div>
                        <div class="clear-cart">
                            <a href="">Clear Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-col">
                    <div class="cart-wrapper">
                        <div class="title-wrapper">
                            <h4 class="title">Standart Shipping Info</h4>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For one product</p>
                            <span class="percent">8%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 2 products</p>
                            <span class="percent">7.5%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 3 products</p>
                            <span class="percent">7%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 4 products</p>
                            <span class="percent">6%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 5 and more products</p>
                            <span class="percent">5%</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-col">
                    <div class="cart-wrapper">
                        <div class="title-wrapper">
                            <h4 class="title">Express Shipping Info</h4>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For one product</p>
                            <span class="percent">12%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 2 products</p>
                            <span class="percent">11.5%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 3 products</p>
                            <span class="percent">11%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 4 products</p>
                            <span class="percent">10.5%</span>
                        </div>
                        <div class="count-percent">
                            <p class="count-info">For 5 and more products</p>
                            <span class="percent">10%</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="cart-wrapper">
                        <div class="title-wrapper">
                            <h4 class="title">Cart Total</h4>
                        </div>
                        <h4 class="total-price">Total products <span class="price">$260.00</span></h4>
                        <div class="total-shipping">
                            <h5>Total shipping</h5>
                            <ul>
                                <li>
                                    <div class="checkbox">
                                        <input type="checkbox" id="standartPrice"> Standard
                                    </div>
                                    <span>$20.00</span>
                                </li>
                                <li>
                                    <div class="checkbox">
                                        <input type="checkbox" id="expressPrice"> Express
                                    </div>
                                    <span>$30.00</span>
                                </li>
                            </ul>
                        </div>
                        <h4 class="grand-totall-price">Grand Total <span class="grand-price">$260.00</span></h4>
                        <a asp-action="checkout">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Cart items end -->
</main>
<!-- Main End -->
