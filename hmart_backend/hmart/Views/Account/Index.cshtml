
@{
    ViewData["Title"] = "Account";
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../assets/uploads/commons/main-header-bg.png">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Account</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active">Account</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Account start -->
    <section id="account" class="py-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <div class="tab-buttons">
                        <ul class="tab-list">
                            <li>
                                <a href="#account-details" data-bs-toggle="tab" class="nav-link active">
                                    Account
                                    details
                                </a>
                            </li>
                            <li><a href="#address" data-bs-toggle="tab" class="nav-link">Addresses</a></li>
                            <li> <a href="#orders" data-bs-toggle="tab" class="nav-link">Orders</a></li>
                            <li><a href="login.html" class="nav-link">logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-details">
                            <h3>Account details </h3>
                            <div class="details">
                                <div class="details_form_container">
                                    <div class="account_details_form">
                                        <form action="#">
                                            <div class="input-radio">
                                                <span class="custom-radio">
                                                    <input type="radio" value="0"
                                                           name="id_gender"> Mr.
                                                </span>
                                                <span class="custom-radio">
                                                    <input type="radio" value="1"
                                                           name="id_gender"> Mrs.
                                                </span>
                                            </div> <br>
                                            <div class="account-form-box mb-4">
                                                <label>First Name</label>
                                                <input type="text" name="first-name">
                                            </div>
                                            <div class="account-form-box mb-4">
                                                <label>Last Name</label>
                                                <input type="text" name="last-name">
                                            </div>
                                            <div class="account-form-box mb-4">
                                                <label>Email</label>
                                                <input type="text" name="email-name">
                                            </div>
                                            <div class="account-form-box mb-4">
                                                <label>Password</label>
                                                <input type="password" name="user-password">
                                            </div>
                                            <div class="account-form-box mb-4">
                                                <label>Birthdate</label>
                                                <input type="date" name="birthday">
                                            </div>
                                            <span class="example">
                                                (E.g.: 07-Jul-1991)
                                            </span>
                                            <br>
                                            <div class="save_button mt-3">
                                                <button class="btn-save" type="submit">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="address">
                            <p>The following addresses will be used on the checkout page by default.</p>
                            <h5 class="billing-address">Billing address</h5>
                            <div class="address">
                                <a href="#" class="edit-address">Edit</a>
                                <br>
                                <strong>Address:</strong>
                                <span class="mb-1 d-inline-block street-apt"> Michael M Hoskins st. Apr.25</span>,
                                <br>
                                <strong>City:</strong>
                                <span class="mb-1 d-inline-block city"> Seattle</span>,
                                <br>
                                <strong>State/Region:</strong>
                                <span class="mb-1 d-inline-block state-region"> Washington(WA)</span>,
                                <br>
                                <strong>ZIP/Postal Code:</strong>
                                <span class="mb-1 d-inline-block zip-postal"> 98101</span>,
                                <br>
                                <strong>Country:</strong>
                                <span class="country"> USA</span>
                            </div>
                            <div class="edit-address-form d-none">
                                <form action="#">
                                    <div class="address-form-box mb-4">
                                        <label>Address</label>
                                        <input type="text" name="street_apt" id="street_apt"
                                               value="Michael M Hoskins st. Apr.25">
                                    </div>
                                    <div class="address-form-box mb-4">
                                        <label>City</label>
                                        <input type="text" name="city" id="city" value="Seattle">
                                    </div>
                                    <div class="address-form-box mb-4">
                                        <label>State/Region</label>
                                        <input type="text" name="state_region" id="state_region"
                                               value="Washington(WA)">
                                    </div>
                                    <div class="address-form-box mb-4">
                                        <label>ZIP/Postal Code</label>
                                        <input type="text" name="zip_postal" id="zip_postal" value="98101">
                                    </div>
                                    <div class="address-form-box mb-4">
                                        <label>Country</label>
                                        <input type="text" name="country" id="country" value="USA">
                                    </div>
                                    <div class="save_button mt-3">
                                        <button class="btn-save" id="btn_save_address" type="submit">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>May 10, 2018</td>
                                            <td><span class="success">Completed</span></td>
                                            <td>$25.00 for 1 item </td>
                                            <td><a asp-action="cart" class="view">view</a></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>May 10, 2018</td>
                                            <td>Processing</td>
                                            <td>$17.00 for 1 item </td>
                                            <td><a asp-action="cart" class="view">view</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Account end -->
</main>
<!-- Main End -->
