
@{
    ViewData["Title"] = "Register";
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../assets/uploads/commons/main-header-bg.png">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Register</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Register</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Register start -->
    <section id="login-register" class="py-section">
        <div class="container">
            <form method="post">
                <div class="row">
                    <div class="col-lg-7 col-md-12 mb-col">
                        <div class="form-container">
                            <div class="login-register-form">
                                <input name="user-email" placeholder="Email" type="email" />
                                <input type="text" name="user-name" placeholder="Username" />
                                <input type="password" name="user-password" placeholder="Password" />
                                <input type="password" name="repeat-password" placeholder="Repeat Password" />
                                <div class="button-box">
                                    <button type="submit"><span>Register</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-12">
                        <div class="form-container register">
                            <div class="image">
                                <img id="profilImg" src="~/assets/uploads/users/user-default.png" alt="Default User"/>
                            </div>
                            <span class="choose-info">Choose File for Change Profil Image</span>
                            <div class="image-input-wrap">
                                <label for="imageFile">
                                    <input class="register-image-input" type="file" name="imageFile" id="imageFile">
                                    <span id="imageFileName" class="file-custom">
                                        Choose File ...
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Register end -->
</main>
<!-- Main End -->
